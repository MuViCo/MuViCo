{
  "name": "muvico",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "docker-compose up",
    "dev": "NODE_ENV=development concurrently \"nodemon --exec node src/server/index.js\" \"vite --host\"",
    "prod": "NODE_ENV=production node src/server/index.js",
    "lint": "eslint 'src/**/*.js' 'src/**/*.jsx'",
    "format": "prettier --write '*.{js,json,css,md}'",
    "test-frontend": "jest --testPathPattern=src/client/tests/unit --verbose --runInBand --env=jsdom --coverage --coverageReporters=lcov --coverageDirectory=coverage/frontend",
    "test-backend": "NODE_ENV=test jest --testPathPattern=src/server/tests/ --verbose --runInBand --env=node --coverage --coverageReporters=lcov --coverageDirectory=coverage/backend",
    "test-all": "npm run test-frontend && npm run test-backend",
    "build": "vite build",
    "test:cypress-open": "cypress open",
    "setup-e2e": "concurrently \"vite --host\"  \"NODE_ENV=test node src/server/index.js\"",
    "e2e": "concurrently \"npm run setup-e2e\"  \"sleep 1 && playwright test --project chromium --ui\"",
    "e2e:report": "playwright show-report && codecov"
  },
  "jest": {
    "globalTeardown": "./src/server/tests/teardown.js",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/",
      "/dist/",
      "/coverage/",
      "/public/",
      ".*/src/client/tests/e2e/",
      ".*/src/server/tests/test_helper.js",
      ".*/src/server/connections/",
      ".*/src/server/routes/connections.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MuViCo/MuViCo"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/client-secrets-manager": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/theme-tools": "^2.2.6",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@reduxjs/toolkit": "^2.6.1",
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase": "^11.4.0",
    "firebase-admin": "^13.2.0",
    "framer-motion": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.14.2",
    "mongoose": "^8.12.1",
    "mongoose-unique-validator": "^5.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "playwright": "^1.51.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-grid-layout": "^1.5.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.3.0",
    "reactflow": "^11.11.4",
    "redux": "^5.0.1",
    "vite": "^6.2.2",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@eslint/compat": "^1.2.7",
    "@playwright/test": "^1.51.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.10",
    "aws-sdk-mock": "^6.2.1",
    "codecov": "^3.8.3",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0"
  }
}
